    <body>

      <div class="fields">
           <p class="underline text-center bold">Item Description</p>

            <div class="input-group-field">
              <label for="" class="form-label ">About Item</label>
              <textarea name="name"id="about" rows="8" class="form-input control">About item here...</textarea>
            </div>

            <div class="input-group-field">
              <label for="" class="form-label ">Ingredients</label>
              <textarea name="name"id="ingredients" rows="8" class="form-input control">Item ingredients here...</textarea>
            </div>

            <div class="input-group-field">
              <label for="" class="form-label ">About Item</label>
              <textarea name="name" id="how_to_use" rows="8" class="form-input control">Description of item here...</textarea>
            </div>

            <div class="input-group-field mt-20">
              <label for="image" class="form-label pointer  file-type rel">
                <p class="text-center">Upload Item Image</p>
                <div class=" flex justify-content-center">

                  <div class="abs" style="width:100%;height:100%;top:0;left:0;z-index:20;background-color:#afa8a8;color:#fff;">
                    <p class="text-center">Upload. Please Wait...</p>
                    <div class=" flex justify-content-center ">

                      <img src="/images/svg/uploading.svg" width="30px" height="45px" alt="">
                    </div>
                  </div>



                  <img src="/images/svg/upload.svg" width="30px" height="45px" alt="">
                </div>
              </label>
              <input type="file" name="image" id="image" class="none" value="">
            </div>



            <div class="mt-30">
              <button type="submit"  class="form-input control  rel straight-edge">Add New Item</button>
            </div>

            <div class="mt-20">

              <button type="submit"  class="form-input control form-btn--rounded form-input--rounded--cinnabar rel straight-edge">Add New Item</button>
            </div>
          </form>

          <script type="text/javascript"`>
          var about;
          var how_to_use;
          var ingredients;
          var image = document.getElementById('image');

            ClassicEditor
            .create( document.querySelector( '#about' ) )
                .then( editor => {
                  about = editor;
                } )
                .catch( error => {
                  console.error( error );
            } );

            ClassicEditor
            .create( document.querySelector( '#how_to_use' ) )
                .then( editor => {
                    how_to_use = editor;
                } )
                .catch( error => {
                    console.error( error );
            } );

            ClassicEditor
              .create( document.querySelector( '#ingredients' ) )
                  .then( editor => {
                      ingredients = editor;
                  } )
                  .catch( error => {
                      console.error( error );
    } );



            //FOR IMAGES
            image.onchange = function(){
            var formdata = new FormData();
            var files = image.files;
